# VittoriaDB RAG Web UI - Production Environment Configuration

# OpenAI API Key (required for AI responses)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Token (optional, for private repos and higher rate limits)
GITHUB_TOKEN=your_github_token_here

# Service URLs (production values)
VITTORIADB_URL=http://vittoriadb:8080
OLLAMA_URL=http://ollama:11434
REDIS_URL=redis://redis:6379

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8501
NEXT_PUBLIC_WS_URL=ws://localhost:8501

# Production settings
NODE_ENV=production
ENVIRONMENT=production
LOG_LEVEL=INFO
NEXT_TELEMETRY_DISABLED=1

# Security settings
SECURE_COOKIES=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Performance settings
VITTORIADB_MAX_MEMORY=2GB
OLLAMA_KEEP_ALIVE=24h
REDIS_MAX_MEMORY=200mb
